
funcao pesquisaLinear(array, elementoBuscado):
    cada i de 0 até tamanho(array) - 1:
        se array[i] == elementoBuscado:
            retorne i  
    retorne -1  


Array = [5, 8, 12, 16, 22]
entrada("Qual o elemento que deseja saber a posição?", elemento) 
posicao = pesquisaLinear(Array, elemento)
se posicao != -1:
    imprime("Elemento encontrado na posição: {posicao}")
senao:
    imprime("Elemento não encontrado no array.")
