modelo Verificador:
    funcao EpotenciaDe2(numero):
        enquanto numero > 1:
            se numero % 2 != 0:
                imprime("O numero não é uma potencia de 2")
            numero = numero / 2
        imprime("O numero é uma potencia de 2")

