modelo Verificador:
    funcao ehperfeito(numero):
        divisores = []
        para divisor em (1, numero):
            if numero % divisor == 0:
                divisores.append(divisor)
        se soma(divisores) == 28:
            imprime("O numero é perfeito")
        senao
            imprime("O numero não é perfeito")
        
